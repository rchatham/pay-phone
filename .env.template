# =============================================================================
# Payphone Configuration Template
# =============================================================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control - it contains secrets!
#
# On Raspberry Pi, secrets are injected automatically during deployment
# =============================================================================

# -----------------------------------------------------------------------------
# Hardware Configuration
# -----------------------------------------------------------------------------

# Hardware mode: GPIO (direct Pi control) or Serial (Arduino-based)
USE_GPIO=true

# Serial port settings (only used if USE_GPIO=false)
SERIAL_PORT=/dev/ttyUSB0
BAUDRATE=9600

# GPIO pin assignments (only used if USE_GPIO=true)
# Format: JSON array of pin numbers using BCM numbering
KEYPAD_ROW_PINS=[5, 6, 13, 19]
KEYPAD_COL_PINS=[26, 20, 21]
HOOK_SWITCH_PIN=17

# -----------------------------------------------------------------------------
# Audio Configuration
# -----------------------------------------------------------------------------

# Audio file directory (relative to project root)
AUDIO_DIR=audio_files

# Audio sample rate (Hz)
SAMPLE_RATE=44100

# -----------------------------------------------------------------------------
# Menu Configuration
# -----------------------------------------------------------------------------

# Menu timeout in seconds (how long to wait for input before timing out)
MENU_TIMEOUT=30

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable audio recording functionality
ENABLE_RECORDING=false

# Enable cellular/telephony features (future)
ENABLE_CELLULAR=false

# -----------------------------------------------------------------------------
# Raspberry Pi Access (for deployment from local machine)
# -----------------------------------------------------------------------------
# These secrets are managed via 1Password CLI on your local machine
# They are NOT stored on the Raspberry Pi

# Raspberry Pi SSH connection details
PI_HOST=raspberrypi.local
PI_PORT=22
PI_USER=pi
PI_PASSWORD=  # Stored in 1Password: op://Personal/Payphone-Pi/password

# SSH key path (optional, if using key-based auth)
PI_SSH_KEY_PATH=~/.ssh/id_rsa_payphone  # Key stored in 1Password

# -----------------------------------------------------------------------------
# Future API Integrations (Placeholder)
# -----------------------------------------------------------------------------
# These will be used when adding cloud features

# OpenAI API (for voice AI features)
OPENAI_API_KEY=  # Stored in 1Password: op://Personal/Payphone-APIs/OpenAI/api_key

# Twilio API (for telephony features)
TWILIO_ACCOUNT_SID=  # Stored in 1Password: op://Personal/Payphone-APIs/Twilio/account_sid
TWILIO_AUTH_TOKEN=  # Stored in 1Password: op://Personal/Payphone-APIs/Twilio/auth_token
TWILIO_PHONE_NUMBER=  # Stored in 1Password: op://Personal/Payphone-APIs/Twilio/phone_number

# Weather API (for weather information)
WEATHER_API_KEY=  # Stored in 1Password: op://Personal/Payphone-APIs/Weather/api_key

# -----------------------------------------------------------------------------
# Development & Debugging
# -----------------------------------------------------------------------------

# Enable debug logging
DEBUG=false

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=/var/log/payphone/payphone.log
